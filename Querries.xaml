<Window x:Class="KapustinRPMBDPR2.Querries"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KapustinRPMBDPR2"
        mc:Ignorable="d"
        Title="Querries" Height="200" Width="450">
    <Grid>
        <Label Content="Первый запрос" Height="50" Width="100" Margin="0,0,200,0"/>
        <Label Content="Второй запрос" Height="50" Width="100" Margin="200,0,0,0"/>
        <Button x:Name="FirstQuerryBTN" Content="Первый" Height="20" Width="65" Margin="0,20,210,0" Click="FirstQuerryBTN_Click" ></Button>
        <Button x:Name="SecondQuerryBTN" Content="Второй" Height="20" Width="65" Margin="190,20,0,0" Click="SecondQuerryBTN_Click" ></Button>
        <TextBox x:Name="FirstTB" IsReadOnly="true" Height="50" Width="100" Margin="0,100,210,0"></TextBox>
        <TextBox x:Name="SecondTB" IsReadOnly="true" Height="50" Width="100" Margin="190,100,0,0"></TextBox>
    </Grid>
</Window>
