<Window x:Class="KapustinRPMBDPR2.RegionER"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KapustinRPMBDPR2"
        mc:Ignorable="d"
        Title="RegionER" Height="200" Width="250"
        Loaded="Window_Loaded">
    <Grid>
        <TextBox x:Name="RegionIdTB" Height="25" Width="150" Margin="0,0,0,90" HorizontalAlignment="Center"/>
        <TextBox x:Name="RegionNameTB" Height="25" Width="150" Margin="0,15,0,0" HorizontalAlignment="Center"/>
        <Button x:Name="AddRecordBTN" Content="Изменить" Height="25" Width="70" Margin="0,95,80,0" HorizontalAlignment="Center" Click="EditBTN_Click"/>
        <Button x:Name="CancelBTN" Content="Отмена" Height="25" Width="70" Margin="80,95,0,0" HorizontalAlignment="Center" Click="CancelBTN_Click"/>
        <Label Content="Номер региона" HorizontalAlignment="Center" Height="30" Margin="0,0,0,140"/>
        <Label Content="Имя региона" HorizontalAlignment="Center" Height="25" Margin="0,0,0,40"/>
    </Grid>
</Window>
