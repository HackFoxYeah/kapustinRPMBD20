<Window x:Class="KapustinRPMBDPR2.Querries"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KapustinRPMBDPR2"
        mc:Ignorable="d"
        Title="Querries" Height="200" Width="450">
    <Grid>
        <Label Content="Первый запрос" Height="50" Width="100" Margin="0,120,220,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Content="Второй запрос" Height="50" Width="100" Margin="260,125,0,0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button x:Name="FirstQuerryBTN" Content="Первый" Height="20" Width="65" Margin="0,140,220,0" HorizontalAlignment="Center" VerticalAlignment="Center" Click="FirstQuerryBTN_Click" ></Button>
        <Button x:Name="SecondQuerryBTN" Content="Второй" Height="20" Width="65" Margin="260,140,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Click="SecondQuerryBTN_Click" ></Button>
        <DataGrid x:Name="Dg" Margin="0,0,0,60"/>
    </Grid>
</Window>
